@model SJ.DAL.Funcionario
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Nome</label>
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Telefone</label>
        @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Celular</label>
        @Html.TextBoxFor(model => model.Celular, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn @(Model == null ? "btn-success": "btn-warning")"><i class="fas @(Model == null ? "fa-plus-square" : "fa-pen-square")"></i> @(Model == null ? "Criar" : "Editar") Registro</button>
    </div>
}
