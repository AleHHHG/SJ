@model SJ.DAL.Produto
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Nome</label>
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Valor</label>
        @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Tipo</label>
        @Html.DropDownListFor(model => model.Tipo, new List<SelectListItem>
        {
            new SelectListItem{ Text="Lanches/Omeletes", Value = "1" },
            new SelectListItem{ Text="Refrigerantes", Value = "2" },
            new SelectListItem{ Text="Outros", Value = "3"}
        }, "Selecione", new { @class = "form-control" })
    </div>


    <div class="form-group">
        <button type="submit" class="btn @(Model == null ? "btn-success": "btn-warning")"><i class="fas @(Model == null ? "fa-plus-square" : "fa-pen-square")"></i> @(Model == null ? "Criar" : "Editar") Registro</button>
    </div>
}
